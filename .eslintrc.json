{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "$": false,
    "Routes": false,
    "React": false,
    "freshen": false,
    "dates": false,
    "marked": false,
    "magmaActions": false,
    "messageActions": false,
    "connect": false,
    "plotActions": false,
    "timurActions": false,
    "Keycode": false,
    "Matrix": false,
    "classNames": false,
    "chroma": false,
    "Tree": false,
    "Redux": false,
    "thunk": false,
    "TableSet": false,
    "TableColumn": false
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-undef": "error",
    "quotes": ["error", "single", {"avoidEscape": true}],
    "semi": "warn",
    "no-var": "warn",
    "curly": "warn",
    "brace-style": ["warn", "stroustrup", {"allowSingleLine": true}]
  }
}
