= content_for :title, "Timur - Browse - #{@record_name}"

#root
%script{ type: "text/javascript" }
  :plain
    $(function() {
      ReactDOM.render(
        React.createElement(Timur, {
          #{current_user ? "user: '#{current_user.name}', " : '' }
          mode: 'plotter',
          environment: '#{Rails.env.development? ? 'development' : 'production'}'
        }),
        $('#root')[0]
      );
    })
