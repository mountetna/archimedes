= content_for :title, "Timur - Browse - #{@name}"

#model
  #model_header
    = @model.name
    #edit{ onclick: "javascript: show_edit()" }
      &#x270e;
    #cancel{ onclick: "javascript: cancel_edit()" }
      &#x2717;
    #approve{ onclick: "javascript: submit_edit()" }
      &#x2713;
  #names
    - @model.attributes.each do |name,att|
      .attribute{ title: att.desc }
        = att.display_name
  %form#values{ action: update_model_path, method: :post }
    = hidden_field_tag :authenticity_token, form_authenticity_token
    %input{ type: :hidden, name: :id, value: @record.id }
    %input{ type: :hidden, name: :record, value: @model.name }
    - @model.attributes.each do |name,att|
      .value
        ! #{ @record.send(att.name) }&nbsp;
      .edit_value
        - if att.type.is_a? Class
          %input{ type: :text, name: "values[#{att.name}]", value: @record.send(att.name) }
        - else
          [ link ]
